@model List<Tennisclubb.Models.MemberViewModel>

<h2>Logged-In Member Details</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Joined Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.UserName</td>
                    <td>@member.Email</td>
                    <td>@member.JoinedDate.ToString("yyyy-MM-dd")</td> <!-- Format DateTime -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No members to display</p>
}

<!-- Add some styles for the table -->
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f4f4f4;
        font-weight: bold;
    }
</style>

